<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_power"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FFE6"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.cho.multitab.PowerActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="8"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="10dp"
        android:rowCount="3">

        <Button
            android:id="@+id/btn_all_on"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_rowWeight="1"
            android:background="@drawable/round_box"
            android:drawableLeft="@drawable/vec_on"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="All\nOn"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_all_off"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            android:layout_rowWeight="1"
            android:background="@drawable/round_box"
            android:drawableLeft="@drawable/vec_off"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="All\nOff"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_consent_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_rowWeight="1"
            android:background="@drawable/round_box"
            android:drawableLeft="@drawable/vec_power"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="1번"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_consent_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            android:layout_rowWeight="1"
            android:background="@drawable/round_box"
            android:drawableLeft="@drawable/vec_power"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="2번"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_consent_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:layout_rowWeight="1"
            android:background="@drawable/round_box"
            android:drawableLeft="@drawable/vec_power"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="3번"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_consent_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/round_box"
            android:drawableLeft="@drawable/vec_power"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="4번"
            android:textColor="#000000"
            android:textSize="15sp" />
    </GridLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#E6FFE6"
        android:gravity="left|center_vertical"
        android:src="@drawable/vec_back" />
</LinearLayout>
