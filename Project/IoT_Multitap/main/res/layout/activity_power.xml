<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_power"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FFE6"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.cho.multitab.PowerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_all_on"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_box_green"
                android:drawableLeft="@drawable/vec_on"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="All On"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_all_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_box_green"
                android:drawableLeft="@drawable/vec_off"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="All Off"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_box_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/btn_consent_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/vec_power"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="1번 콘센트"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_consent_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_box_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/btn_consent_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/vec_power"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="2번 콘센트"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_consent_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_box_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/btn_consent_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/vec_power"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="3번 콘센트"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_consent_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_box_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/btn_consent_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/vec_power"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="4번 콘센트"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_consent_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtn_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E6FFE6"
        android:gravity="left|center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/vec_back" />
</LinearLayout>
