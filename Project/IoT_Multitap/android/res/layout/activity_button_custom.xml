<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_button_custom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_box_green"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.cho.multitab.ButtonCustom">


    <ImageView
        android:id="@+id/custom_btn_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/vec_power" />

    <TextView
        android:id="@+id/custom_btn_img_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="On / Off"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
</LinearLayout>
