<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FFE6"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.cho.multitab.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="SMART TAP"
        android:textColor="#52E252"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.cho.multitab.ButtonCustom
            android:id="@+id/custom_button_power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:clickable="true"
            app:buttonSymbol="@drawable/vec_power"
            app:buttonText="ON / OFF" />

        <com.example.cho.multitab.ButtonCustom
            android:id="@+id/custom_button_timer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            app:buttonSymbol="@drawable/vec_timer"
            app:buttonText="타이머 설정" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="horizontal">

        <com.example.cho.multitab.ButtonCustom
            android:id="@+id/custom_button_what"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:clickable="true"
            app:buttonSymbol="@drawable/vec_what"
            app:buttonText="준비 중" />

        <com.example.cho.multitab.ButtonCustom
            android:id="@+id/custom_button_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            app:buttonSymbol="@drawable/vec_exit"
            app:buttonText="나가기" />
    </LinearLayout>
</LinearLayout>
