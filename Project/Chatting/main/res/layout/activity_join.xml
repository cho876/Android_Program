<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCAD5"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.cho.chatting.JoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/join_Img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundframe"
            android:scaleType="fitXY" />


        <com.example.cho.chatting.CustomButton
            android:id="@+id/join_searchBtn"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:clickable="true"
            app:btnAttr_img="@drawable/vec_img"
            app:btnAttr_txt="사진 불러오기" />
    </LinearLayout>

    <com.example.cho.chatting.CustomEditText
        android:id="@+id/join_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:editAttr_edit_drawable="@drawable/vec_info"
        app:editAttr_edit_hint="이름4 입력.."
        app:editAttr_edit_inputType="0x00000001"
        app:editAttr_txt="이름\n(Name)" />

    <com.example.cho.chatting.CustomEditText
        android:id="@+id/join_nickname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:editAttr_edit_drawable="@drawable/vec_info"
        app:editAttr_edit_hint="닉네임 입력.."
        app:editAttr_edit_inputType="0x00000001"
        app:editAttr_txt="닉네임\n(Nick Name)" />

    <com.example.cho.chatting.CustomEditText
        android:id="@+id/join_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:editAttr_edit_drawable="@drawable/vec_email"
        app:editAttr_edit_hint="이메일 입력.."
        app:editAttr_edit_inputType="0x00000021"
        app:editAttr_txt="이메일\n(Email)" />

    <com.example.cho.chatting.CustomEditText
        android:id="@+id/join_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:editAttr_edit_drawable="@drawable/vec_pw"
        app:editAttr_edit_hint="비밀번호 입력.."
        app:editAttr_edit_inputType="0x00000081"
        app:editAttr_txt="비밀번호\n(Password)" />

    <com.example.cho.chatting.CustomEditText
        android:id="@+id/join_passwordChk"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:editAttr_edit_drawable="@drawable/vec_pw"
        app:editAttr_edit_hint="비밀번호 재입력.."
        app:editAttr_edit_inputType="0x00000081"
        app:editAttr_txt="비밀번호\n(Password)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <com.example.cho.chatting.CustomButton
            android:id="@+id/join_backBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:clickable="true"
            app:btnAttr_img="@drawable/vec_back"
            app:btnAttr_txt="뒤로가기" />

        <com.example.cho.chatting.CustomButton
            android:id="@+id/join_saveBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            app:btnAttr_img="@drawable/vec_regist"
            app:btnAttr_txt="등록하기" />
    </LinearLayout>
</LinearLayout>
