<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.cho.account_book.MainActivity">

    <com.example.cho.account_book.CustomTitle
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:title_symbol="@drawable/vec_main"
        app:title_title="가계부 다이어리" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_tab1"
            style="@style/ButtonStyle_horizontal"
            android:layout_marginRight="10dp"
            android:text="한도액\n조회"
            android:textSize="15sp" />

        <Button
            android:id="@+id/main_tab2"
            style="@style/ButtonStyle_horizontal"
            android:layout_marginRight="10dp"
            android:text="최근\n거래내역"
            android:textSize="15sp" />

        <Button
            android:id="@+id/main_tab3"
            style="@style/ButtonStyle_horizontal"
            android:text="탭\n3"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

        <com.melnykov.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/vec_help"
            fab:fab_colorNormal="#FFCAD5"
            fab:fab_colorPressed="#FF848F"
            fab:fab_colorRipple="#FFCAD5" />
</LinearLayout>
